{
    "name": "CommentFinder",
    "description": "Base Level Extension",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://www.instagram.com/*"
    ],
    "action": {
      "default_popup": "hello.html",
      "default_icon": "hello_extensions.png"
    },
    "content_scripts": [
      {
        "matches": [
          "https://www.instagram.com/*"
        ],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ]
  }